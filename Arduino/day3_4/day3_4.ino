  int w_interval = 40;
  int h_interval = 8;
  display.fillRect(SCREEN_WIDTH / 2 - w_interval, SCREEN_HEIGHT / 2 - h_interval, w_interval * 2, h_interval * 2, SSD1306_WHITE);
